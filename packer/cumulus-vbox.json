      "headless": true,
      "ssh_username": "cumulus",
      "ssh_password": "cn321",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "sudo -S shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/setup.sh",
      "execute_command": "chmod +x {{ .Path }};sudo {{ .Vars }} {{ .Path }}" 
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `name`}}-{{user `version`}}-vbox.box"
    }
  ]
